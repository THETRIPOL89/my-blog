---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
  <body>
    <Header />
		<main>
      <form id="post-form">
    		<label for="title">Title:</label><br>
    		<input type="text" id="title" name="title"><br>
        <label for="date">Date:</label><br>
        <input type="date" id="date" name="date"><br>
    		<label for="content">Content:</label><br>
    		<textarea id="content" name="content"></textarea><br><br>
    		<input type="button" style="border-radius: 15px; background-color: #272b2e; font-size: medium; color: white; font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;" value="Create Post" onclick="createPost()">
    	</form>
		</main>
		<Footer />
  </body>
</html>
